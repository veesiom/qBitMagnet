{
    "manifest_version": 3,
    "name": "Magnet Catcher",
    "description": "Sends magnet links to qBittorrent Web UI for downloading.",
    "version": "1.0",
    "permissions": [
        "storage",
        "notifications",
        "scripting",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}